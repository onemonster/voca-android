<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:width="21dp" android:height="21dp" />
                    <stroke android:width="1.5dp" android:color="@color/default_button" />
                </shape>
            </item>
            <item android:width="13dp" android:height="13dp" android:left="4dp" android:start="4dp" android:top="4dp">
                <shape android:shape="oval">
                    <size android:width="13dp" android:height="13dp" />
                    <solid android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="21dp" android:height="21dp" />
            <stroke android:width="1.5dp" android:color="@color/default_button" />
        </shape>
    </item>
</selector>